<div class="p-[24px]">
  <h1 class="text-white text-center text-[32px] mb-[32px] font-bold">新規登録</h1>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class ="text-center">
      <%= f.label :username, "ユーザー名" %><br>
      <%= f.text_field :username %>
    </div>

    <div class="text-center mt-[24px]">
      <%= f.label :email, "E-mail" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="text-center mt-[24px]">
      <%= f.label :password, "Password（8文字以上）" %><br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="text-center mt-[24px]">
      <%= f.label :password_confirmation, "Confirm password" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="mt-[32px] box-content bg-[#2EB7AC] rounded-[20px] py-[12px] px-[16px] text-center text-white">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>			
</div>
