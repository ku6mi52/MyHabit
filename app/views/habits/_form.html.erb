<%= form_with model: habit, local: true do |f|  %>
	<% if f.object.errors.any? %>
		<ul style="color:#c00">
			<% f.object.errors.full_message.each do |m| %><li><%= m %></li><% end %>
	</ul>
	<% end %>

	<div class="field">
		<%= f.label :name, "項目名" %><br>
		<%= f.text_field :name, placeholder: "ウォーキング1時間など" %>
	</div>
	
	<div class="field">
		<%= f.label :difficulty, "難易度" %><br>
		<%= f.radio_button :difficulty, :normal, checked: f.object.normal? %>
		<%= f.label :difficulty_normal, "通常" %>
		<%= f.radio_button :difficulty, :easy, checked: f.object.easy? %>
		<%= f.label :difficulty_easy, "易" %>
	</div>
	
	<div class="actions">
		<%= f.submit (defined?(submit_text) ? submit_text : "保存") %>
	</div>
<% end %>
