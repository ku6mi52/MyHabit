<div class="p-[24px]">
  <h1 class="text-[32px] text-white font-bold mb-[24px]">目標の編集</h1>

  <%= form_with model: @user, url: update_goals_profile_path, method: :patch, local: true do |f| %>
    <% if @user.errors.any? %>
      <ul class="mb-[24px]" style="color:#c00">
        <% @user.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
      </ul>
    <% end %>

    <div class="text-[#656565] border border-white bg-white/30 rounded-[20px] mb-[24px] p-[24px] shadow-xl">
      <div class="mb-[8px]"><%= f.label :goal_weight, "目標体重" %></div>
      <%= f.number_field :goal_weight, step: "0.1", min: 0, class: "input input-accent w-full" %>

      <div class="mt-[24px] mb-[8px]"><%= f.label :goal_body_fat_percentage, "目標体脂肪率" %></div>
      <%= f.number_field :goal_body_fat_percentage, step: "0.1", min: 0, class: "input input-accent w-full" %>
      <br>
      <%= f.submit "保存", class: "mt-[32px] bg-[#2EB7AC] py-[12px] px-[16px] text-center text-white rounded-[20px]" %>
    </div>
  <% end %>

  <p class="text-[#2EB7AC] mt-[24px] link"><%= link_to "プロフィール画面に戻る", profile_path %></p>
</div>
