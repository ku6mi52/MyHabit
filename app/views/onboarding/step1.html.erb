<h1>現状登録</h1>

<%= form_with model: current_user, url: step1_onboarding_path, method: :patch, local: true do |f| %>

  <div class="field">
    <%= f.label :start_weight, "現在の体重 (kg)" %><br>
    <%= f.number_field :start_weight, step: "0.1", min: 0 %>
  </div>

  <div class="field">
    <%= f.label :start_body_fat_percentage, "現在の体脂肪率 (%)" %><br>
    <%= f.number_field :start_body_fat_percentage, step: "0.1", min: 0, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "次へ" %>
  </div>
<% end %>

