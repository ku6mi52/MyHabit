<%= form_with model: habit, local: true do |f| %>
  <% if f.object.errors.any? %>
    <ul style="color:#c00">
      <% f.object.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
    </ul>
  <% end %>

  <div class="border border-white bg-white/30 p-[24px] my-[32px] mx-[24px] rounded-[20px] shadow-xl">
    <div class="text-[#656565] text-[24px]"><%= f.label :name, "項目名" %></div>
    <%= f.text_field :name, placeholder: "ウォーキング1時間など", class: "input input-accent w-full mt-[16px]" %>
    <br>
    <%= f.submit "保存", class: "bg-[#2EB7AC] text-white rounded-[20px] text-center mt-[32px] py-[12px] px-[16px] " %>
  </div>
<% end %>
