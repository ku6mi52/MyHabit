<%= form_with model: daily_record, local: true do |f| %>
  <% if f.object.errors.any? %>
    <ul style="color:#c00">
      <% f.object.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :recorded_on, "日付" %><br>
    <%= f.date_select :recorded_on,
          start_year: Date.current.year - 5,
          end_year:   Date.current.year + 1,
          order: [:year, :month, :day],
          use_month_numbers: true,
          date_separator: " ",
          prompt: { year: "年", month: "月", day: "日" } %>
  </div>

  <div class="field">
    <%= f.label :weight, "体重（kg）" %><br>
    <%= f.number_field :weight, step: "0.1", min: 0 %>
  </div>

  <div class="field">
    <%= f.label :body_fat_percentage, "体脂肪率（%）" %><br>
    <%= f.number_field :body_fat_percentage, step: "0.1", min: 0 %>
  </div>

  <div class="actions">
    <%= f.submit (defined?(submit_text) ? submit_text : "保存") %>
  </div>
<% end %>

