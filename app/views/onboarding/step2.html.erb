<div class="p-[24px]">
  <div class="border-white bg-white/30 rounded-[20px] p-[24px]">
    <h1 class="text-center text-white font-bold text-[32px] mb-[32px]">目標登録</h1>

    <%= form_with model: current_user, url: step2_onboarding_path, method: :patch, local: true do |f| %>
      <% if @user&.errors&.any? %>
        <ul class="mb-[24px]" style="color:#c00">
          <% @user.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
        </ul>
      <% end %>

      <div class="text-[#656565] mb-[24px]">
        <%= f.label :goal_weight, "目標の体重 (kg)" %><br>
        <%= f.number_field :goal_weight, step: "0.1", min: 0, required: true, class: "input input-accent rounded-[20px] w-full" %>
      </div>

      <div class="text-[#656565] mb-[32px]">
        <%= f.label :goal_body_fat_percentage, "目標の体脂肪率 (%)" %><br>
        <%= f.number_field :goal_body_fat_percentage, step: "0.1", min: 0, class: "input input-accent rounded-[20px] w-full" %>
      </div>

      <%= f.submit "登録する", class: "box-content bg-[#2EB7AC] py-[12px] px-[16px] text-center text-white rounded-[20px]" %>
    <% end %>
  </div>
</div>
